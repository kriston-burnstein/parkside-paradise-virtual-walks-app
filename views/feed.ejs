<%- include('partials/header-logged-in') -%>

<div id="container-wide" class="container card-container main">
  <h1>Explore Walks</h1>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% for(var i=0; i<posts.length; i++) { %>
    <div class="col">
      <div class="card bg-dark-1 text-white h-100">
        <a href="/post/<%= posts[i]._id%>"><img src="<%= posts[i].image%>" class="card-img-top" alt="..."></a>
        <div class="card-body">
          <h5 class="card-title"><%= posts[i].title %></h5>
          <p class="card-text"><small class="text-muted accent-1">YouTube Guide: <%= posts[i].youTubeUser %></small></p>
          
          
          <p class="card-text accent-1"><i class="px-1 bi bi-heart"></i><%= posts[i].likes.length - 1 %></p>
          
          <a href="/post/<%= posts[i]._id%>" class="btn btn-primary rounded-pill shadow-none btn-lg">View Details</a>
        </div>
        <div class="card-footer">
          <span class="badge rounded-pill outline-badge accent-1 m-1"><%= posts[i].state%></span>
          <span class="badge rounded-pill outline-badge accent-1 m-1"><%= posts[i].speaking%></span>
          <span class="badge rounded-pill outline-badge accent-1 m-1"><%= posts[i].mainTerrain%></span>          
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
  
<%- include('partials/footer') -%>